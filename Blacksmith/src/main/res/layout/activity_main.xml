<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.MainActivity">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/shapeLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wallpaper_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/wallpaper1" />

            <ImageView
                android:id="@+id/wallpaper_id2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/wallpaper_id"
                android:scaleType="fitXY"
                android:src="@drawable/wallpaper2" />

            <ImageView
                android:id="@+id/wallpaper_id3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/wallpaper_id2"
                android:scaleType="fitXY"
                android:src="@drawable/wallpaper3" />

            <ImageView
                android:id="@+id/open_furnace"
                android:layout_width="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="515dp"
                android:onClick="openFurnace"
                app:layout_heightPercent="22%"
                app:layout_marginTopPercent="11%" />

            <GridLayout
                android:id="@+id/slots_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_furnace"
                android:layout_below="@id/open_furnace"
                android:columnCount="5"
                android:onClick="openFurnace"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_anvil"
                android:layout_width="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="770dp"
                android:onClick="openAnvil"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="22%" />

            <GridLayout
                android:id="@+id/slots_anvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_anvil"
                android:layout_below="@id/open_anvil"
                android:columnCount="5"
                android:onClick="openAnvil"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_inventory"
                android:layout_width="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1090dp"
                android:onClick="openInventory"
                app:layout_heightPercent="22%"
                app:layout_marginTopPercent="22%" />

            <GridLayout
                android:id="@+id/slots_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_inventory"
                android:layout_below="@id/open_inventory"
                android:columnCount="4"
                android:onClick="openInventory"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_table"
                android:layout_width="190dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="512dp"
                android:onClick="openTable"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="55%" />

            <GridLayout
                android:id="@+id/slots_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_table"
                android:layout_below="@id/open_table"
                android:columnCount="5"
                android:onClick="openTable"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_enchanting"
                android:layout_width="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="770dp"
                android:onClick="openEnchanting"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="55%" />

            <GridLayout
                android:id="@+id/slots_enchanting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_enchanting"
                android:layout_below="@id/open_enchanting"
                android:columnCount="5"
                android:onClick="openEnchanting"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_market"
                android:layout_width="190dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1285dp"
                android:onClick="openMarket"
                app:layout_heightPercent="25%"
                app:layout_marginTopPercent="0%" />

            <GridLayout
                android:id="@+id/slots_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_market"
                android:layout_below="@id/open_market"
                android:columnCount="5"
                android:onClick="openMarket"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_workers"
                android:layout_width="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1345dp"
                android:onClick="openWorkers"
                app:layout_heightPercent="22%"
                app:layout_marginTopPercent="55%" />

            <GridLayout
                android:id="@+id/slots_workers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_workers"
                android:layout_below="@id/open_workers"
                android:columnCount="5"
                android:onClick="openWorkers"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/bonus_chest"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1482dp"
                android:onClick="clickBonusChest"
                android:scaleType="centerCrop"
                android:src="@drawable/bonus_chest_empty"
                app:layout_heightPercent="9%"
                app:layout_marginTopPercent="46%" />

            <ImageView
                android:id="@+id/open_upgrades"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1030dp"
                android:onClick="openUpgrades"
                android:scaleType="centerCrop"
                android:src="@drawable/uparrow"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="68%" />

            <ImageView
                android:id="@+id/open_help"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1095dp"
                android:onClick="openHelp"
                android:scaleType="centerCrop"
                android:src="@drawable/help"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="68%" />

            <ImageView
                android:id="@+id/open_statistics"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1160dp"
                android:onClick="openStatistics"
                android:scaleType="centerCrop"
                android:src="@drawable/statistics"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="68%" />

            <ImageView
                android:id="@+id/open_premium"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1030dp"
                android:onClick="openPremium"
                android:scaleType="centerCrop"
                android:src="@drawable/item52"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="80%" />

            <ImageView
                android:id="@+id/open_trophies"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1095dp"
                android:onClick="openTrophies"
                android:scaleType="centerCrop"
                android:src="@drawable/trophies"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="80%" />

            <ImageView
                android:id="@+id/open_settings"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1160dp"
                android:onClick="openSettings"
                android:scaleType="centerCrop"
                android:src="@drawable/settings"
                app:layout_heightPercent="8%"
                app:layout_marginTopPercent="80%" />

            <LinearLayout
                android:id="@+id/visitors_container"
                android:layout_width="330dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="56%" />

            <LinearLayout
                android:id="@+id/visitors_container_overflow"
                android:layout_width="330dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="44%" />

            <LinearLayout
                android:id="@+id/left_ledger"
                android:layout_width="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="72dp"
                android:onClick="openMessages"
                android:orientation="horizontal"
                app:layout_heightPercent="6%"
                app:layout_marginTopPercent="68%" />

            <LinearLayout
                android:id="@+id/right_ledger"
                android:layout_width="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="340dp"
                android:onClick="openMessages"
                android:orientation="horizontal"
                app:layout_heightPercent="6%"
                app:layout_marginTopPercent="68%" />

            <RelativeLayout
                android:id="@+id/assistant_container"
                android:layout_width="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="933dp"
                android:onClick="openAssistants"
                app:layout_heightPercent="15%"
                app:layout_marginTopPercent="11%">

                <ImageView
                    android:id="@+id/assistant_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp" />

                <uk.co.jakelee.blacksmith.controls.TextViewPixel
                    android:id="@+id/assistant_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.6"
                    android:background="@color/black"
                    android:gravity="center_horizontal"
                    android:onClick="claimAssistant"
                    android:clickable="true"
                    android:padding="3dp"
                    android:textSize="24sp" />
            </RelativeLayout>

            <!-- Areas -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="553dp"
                android:src="@drawable/furnace"
                app:layout_marginTopPercent="25%" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:onClick="clickBookcase"
                android:src="@drawable/bookcase"
                app:layout_marginTopPercent="20%" />

            <LinearLayout
                android:id="@+id/christmas_tree"
                android:layout_width="65dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="320dp"
                android:onClick="clickChristmasTree"
                android:orientation="horizontal"
                app:layout_heightPercent="22%"
                app:layout_marginTopPercent="18%"
                android:visibility="gone"/>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="789dp"
                android:src="@drawable/anvil"
                app:layout_marginTopPercent="24%" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1296dp"
                android:onClick="clickWindow"
                android:src="@drawable/window"
                app:layout_marginTopPercent="11%" />

            <!-- Water -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:src="@drawable/water" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dp"
                android:src="@drawable/water" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="192dp"
                android:src="@drawable/water" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="256dp"
                android:src="@drawable/bridge" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:src="@drawable/water" />

            <!-- Torches -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="86dp"
                android:src="@drawable/torch"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="22%" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="218dp"
                android:src="@drawable/torch"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="22%" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="860dp"
                android:src="@drawable/torch"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="11%" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1240dp"
                android:src="@drawable/torch"
                app:layout_heightPercent="11%"
                app:layout_marginTopPercent="11%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/item52" />

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/coinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/coinImage"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/buyCoins"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/coinCount"
            android:onClick="openBuyCoins"
            android:src="@drawable/add" />

        <ProgressBar
            android:id="@+id/currentLevelProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:progressDrawable="@drawable/level_progress" />

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/currentLevelPercent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/currentLevelProgress"
            android:layout_alignRight="@id/currentLevelProgress"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/levelBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/currentLevelProgress"
            android:src="@drawable/levelbackground" />

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/currentLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/levelBackground"
            android:layout_alignRight="@id/levelBackground"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <RelativeLayout
            android:id="@+id/blacksmithSlotsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/currentLevel"
            android:onClick="openEventInfo"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/levelbackground" />

            <ImageView
                android:id="@+id/eventIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/blacksmithslots" />
        </RelativeLayout>
    </RelativeLayout>

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/exitTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:alpha="0.6"
        android:background="@color/black"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="exitTutorial"
        android:padding="5dp"
        android:text="@string/exitTutorial"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:visibility="gone" />

</RelativeLayout>