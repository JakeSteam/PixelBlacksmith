<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/shapeLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wallpaper_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/wallpaper" />

            <ImageView
                android:id="@+id/open_market"
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="300dp"
                android:alpha=".10"
                android:onClick="openMarket"
                android:scaleType="center"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/open_market"
                android:layout_toRightOf="@id/open_market"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_furnace"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginLeft="515dp"
                android:layout_marginTop="135dp"
                android:alpha=".10"
                android:onClick="openFurnace"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_furnace"
                android:layout_below="@id/open_furnace"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_anvil"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginLeft="770dp"
                android:layout_marginTop="135dp"
                android:alpha=".10"
                android:onClick="openAnvil"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_anvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_anvil"
                android:layout_below="@id/open_anvil"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_inventory"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginLeft="1090dp"
                android:layout_marginTop="135dp"
                android:onClick="openInventory"
                android:scaleType="centerCrop"
                android:alpha=".10"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_inventory"
                android:layout_below="@id/open_inventory"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_table"
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:layout_marginLeft="510dp"
                android:layout_marginTop="410dp"
                android:alpha=".10"
                android:onClick="openTable"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_table"
                android:layout_below="@id/open_table"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_enchanting"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="770dp"
                android:layout_marginTop="345dp"
                android:alpha=".10"
                android:onClick="openEnchanting"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/slots_enchanting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/open_enchanting"
                android:layout_alignTop="@id/open_enchanting"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_upgrades"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1025dp"
                android:layout_marginTop="415dp"
                android:onClick="openUpgrades"
                android:scaleType="centerCrop"
                android:src="@drawable/uparrow" />

            <ImageView
                android:id="@+id/open_help"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1090dp"
                android:layout_marginTop="415dp"
                android:onClick="openHelp"
                android:scaleType="centerCrop"
                android:src="@drawable/helpbook" />

            <ImageView
                android:id="@+id/open_statistics"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1155dp"
                android:layout_marginTop="415dp"
                android:onClick="openStatistics"
                android:scaleType="centerCrop"
                android:src="@drawable/statistics" />

            <ImageView
                android:id="@+id/open_trophies"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1090dp"
                android:layout_marginTop="485dp"
                android:onClick="openTrophies"
                android:scaleType="centerCrop"
                android:src="@drawable/trophies" />

            <ImageView
                android:id="@+id/open_settings"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1150dp"
                android:layout_marginTop="485dp"
                android:onClick="openSettings"
                android:scaleType="centerCrop"
                android:src="@drawable/settings" />

            <LinearLayout
                android:id="@+id/visitors_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="345dp"
                android:layout_marginLeft="65dp" />

            <LinearLayout
                android:id="@+id/visitors_container_overflow"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="65dp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/item52"/>

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/coinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/coinImage"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <ProgressBar
            android:id="@+id/currentLevelProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:progressDrawable="@drawable/level_progress" />

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/currentLevelPercent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/currentLevelProgress"
            android:layout_alignRight="@id/currentLevelProgress"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <uk.co.jakelee.blacksmith.controls.TextViewPixel
            android:id="@+id/currentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/currentLevelProgress"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:background="@drawable/levelbackground"/>
    </RelativeLayout>

</RelativeLayout>