<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/shapeLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/wallpaper">

            <ImageView
                android:id="@+id/open_market"
                android:layout_width="225dp"
                android:layout_height="105dp"
                android:layout_marginLeft="565dp"
                android:layout_marginTop="510dp"
                android:alpha=".10"
                android:onClick="openMarket"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/open_market"
                android:layout_toRightOf="@id/open_market"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_furnace"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="100dp"
                android:alpha=".10"
                android:onClick="openFurnace"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_furnace"
                android:layout_below="@id/open_furnace"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_anvil"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="305dp"
                android:alpha=".10"
                android:onClick="openAnvil"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_anvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_anvil"
                android:layout_below="@id/open_anvil"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_inventory"
                android:layout_width="330dp"
                android:layout_height="190dp"
                android:layout_marginLeft="960dp"
                android:layout_marginTop="170dp"
                android:alpha=".10"
                android:onClick="openInventory"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_inventory"
                android:layout_below="@id/open_inventory"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_table"
                android:layout_width="380dp"
                android:layout_height="30dp"
                android:layout_marginLeft="500dp"
                android:layout_marginTop="400dp"
                android:alpha=".10"
                android:onClick="openTable"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_table"
                android:layout_below="@id/open_table"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_enchanting"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="960dp"
                android:layout_marginTop="430dp"
                android:alpha=".10"
                android:onClick="openEnchanting"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <RelativeLayout
                android:id="@+id/slots_enchanting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_enchanting"
                android:layout_below="@id/open_enchanting"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_upgrades"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="465dp"
                android:layout_marginTop="95dp"
                android:onClick="openUpgrades"
                android:scaleType="centerCrop"
                android:src="@drawable/uparrow" />

            <ImageView
                android:id="@+id/open_help"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="545dp"
                android:layout_marginTop="95dp"
                android:onClick="openHelp"
                android:scaleType="centerCrop"
                android:src="@drawable/help" />

            <ImageView
                android:id="@+id/open_statistics"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="625dp"
                android:layout_marginTop="95dp"
                android:onClick="openStatistics"
                android:scaleType="centerCrop"
                android:src="@drawable/levels" />

            <ImageView
                android:id="@+id/open_trophies"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="705dp"
                android:layout_marginTop="95dp"
                android:onClick="openTrophies"
                android:scaleType="centerCrop"
                android:src="@drawable/trophies" />

            <ImageView
                android:id="@+id/open_settings"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="785dp"
                android:layout_marginTop="95dp"
                android:onClick="openSettings"
                android:scaleType="centerCrop"
                android:src="@drawable/settings" />

            <LinearLayout
                android:id="@+id/visitors_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="235dp"
                android:layout_marginLeft="485dp"/>

            <LinearLayout
                android:id="@+id/visitors_container_overflow"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="485dp"/>

        </RelativeLayout>
    </HorizontalScrollView>

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/coinCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/currentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/coinCount"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>