<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/heroRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/heroCharacter"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:background="@drawable/slot"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="35%" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/heroCharacterText"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/heroCharacter"
        android:layout_alignLeft="@id/heroCharacter"
        android:alpha="0.6"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/workerLocked"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_widthPercent="35%" />

    <ImageView
        android:id="@+id/heroFood"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignRight="@id/heroCharacter"
        android:layout_alignTop="@id/heroCharacter"
        android:background="@drawable/slot"
        android:visibility="invisible"
        app:layout_widthPercent="17%" />

    <ImageView
        android:id="@+id/heroAdventure"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/heroCharacter"
        android:background="@drawable/slot"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="35%" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/heroAdventureText"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/heroAdventure"
        android:layout_alignLeft="@id/heroAdventure"
        android:alpha="0.6"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/workerLocked"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_widthPercent="35%" />

    <LinearLayout
        android:id="@+id/heroResource"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/heroAdventure"
        android:background="@drawable/slot"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="20%" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/heroButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/heroCharacter"
        android:layout_below="@id/heroCharacter"
        android:background="@drawable/button_extra_wide"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

</android.support.percent.PercentRelativeLayout>