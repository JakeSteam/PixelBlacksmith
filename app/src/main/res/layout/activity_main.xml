<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/shapeLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/wallpaper">

            <ImageView
                android:id="@+id/open_mine"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="0dp"
                android:alpha=".20"
                android:contentDescription="@string/mine_description"
                android:onClick="openMine"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageView
                android:id="@+id/open_furnace"
                android:layout_width="450dp"
                android:layout_height="380dp"
                android:layout_marginLeft="790dp"
                android:layout_marginTop="150dp"
                android:alpha=".20"
                android:contentDescription="@string/furnace_description"
                android:onClick="openFurnace"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <RelativeLayout
                android:id="@+id/slots_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_furnace"
                android:layout_below="@id/open_furnace"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_anvil"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="380dp"
                android:alpha=".20"
                android:contentDescription="@string/anvil_description"
                android:onClick="openAnvil"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <RelativeLayout
                android:id="@+id/slots_anvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_anvil"
                android:layout_below="@id/open_anvil"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_inventory"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="200dp"
                android:alpha=".20"
                android:contentDescription="@string/inventory_description"
                android:onClick="openInventory"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <RelativeLayout
                android:id="@+id/slots_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_inventory"
                android:layout_below="@id/open_inventory"
                android:orientation="horizontal" />

        </RelativeLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openMenu"
        android:shadowColor="#000000"
        android:text="Menu   "
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/coinCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/menuButton"
        android:shadowColor="#000000"
        android:text="0 Coins"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/currentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/coinCount"
        android:shadowColor="#000000"
        android:text="Level 0"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
</RelativeLayout>