<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/shapeLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/wallpaper">

            <ImageView
                android:id="@+id/open_mine"
                android:layout_width="225dp"
                android:layout_height="105dp"
                android:layout_marginLeft="565dp"
                android:layout_marginTop="510dp"
                android:alpha=".10"
                android:contentDescription="@string/mine_description"
                android:onClick="openMine"
                android:scaleType="centerCrop"
                android:src="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/slots_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/open_mine"
                android:layout_toRightOf="@id/open_mine"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_furnace"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="100dp"
                android:alpha=".10"
                android:contentDescription="@string/furnace_description"
                android:onClick="openFurnace"
                android:scaleType="centerCrop"
                android:src="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/slots_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_furnace"
                android:layout_below="@id/open_furnace"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_anvil"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="305dp"
                android:alpha=".10"
                android:contentDescription="@string/anvil_description"
                android:onClick="openAnvil"
                android:scaleType="centerCrop"
                android:src="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/slots_anvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_anvil"
                android:layout_below="@id/open_anvil"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_inventory"
                android:layout_width="330dp"
                android:layout_height="190dp"
                android:layout_marginLeft="960dp"
                android:layout_marginTop="170dp"
                android:alpha=".10"
                android:contentDescription="@string/inventory_description"
                android:onClick="openInventory"
                android:scaleType="centerCrop"
                android:src="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/slots_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_inventory"
                android:layout_below="@id/open_inventory"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/open_table"
                android:layout_width="380dp"
                android:layout_height="30dp"
                android:layout_marginLeft="500dp"
                android:layout_marginTop="400dp"
                android:alpha=".10"
                android:contentDescription="@string/table_description"
                android:onClick="openTable"
                android:scaleType="centerCrop"
                android:src="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/slots_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/open_table"
                android:layout_below="@id/open_table"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/visitors_container"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="385dp"
                android:layout_height="125dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="485dp"/>

        </RelativeLayout>
    </HorizontalScrollView>


    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openMenu"
        android:shadowColor="#000000"
        android:text="Menu   "
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/coinCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/menuButton"
        android:shadowColor="#000000"
        android:text="0 Coins"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <uk.co.jakelee.blacksmith.controls.TextViewPixel
        android:id="@+id/currentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/coinCount"
        android:shadowColor="#000000"
        android:text="Level 0"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
</RelativeLayout>