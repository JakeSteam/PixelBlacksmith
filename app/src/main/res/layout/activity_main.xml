<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageButton
            android:id="@+id/open_furnace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/furnace_description"
            android:onClick="openFurnace"
            android:scaleType="fitCenter"
            android:src="@drawable/furnace" />

        <ImageButton
            android:id="@+id/open_anvil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/anvil_description"
            android:maxHeight="150dp"
            android:onClick="openAnvil"
            android:scaleType="fitCenter"
            android:src="@drawable/anvil" />
    </TableRow>

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/copperOreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="5dp"
            android:text="@string/copper_ore"
            android:textAlignment="textEnd"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/copperOreCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:numeric="integer"
            android:text="@string/default_item_count"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/copperOreAddButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:onClick="addCopperOre"
            android:text="@string/add_one_ore" />
    </TableRow>

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tinOreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="@string/tin_ore"
            android:textAlignment="textEnd"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tinOreCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:numeric="integer"
            android:text="@string/default_item_count"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/tinOreAddButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:onClick="addTinOre"
            android:text="@string/add_one_ore" />
    </TableRow>

</TableLayout>