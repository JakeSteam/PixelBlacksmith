<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/popupbackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.co.jakelee.blacksmith.main.TradeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="closeTrade"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/tradeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tradeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="55sp" />

    <ImageView
        android:id="@+id/visitorPicture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/tradeTitle"
        android:src="@drawable/visitor1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/visitorVisits"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/visitorPicture"
        android:layout_alignLeft="@id/visitorPicture"
        android:textAlignment="center"
        android:text="Visits: 0"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/visitorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/visitorPicture"
        android:layout_toRightOf="@id/visitorPicture"
        android:text="Visitor Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/visitorDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/visitorName"
        android:layout_below="@id/visitorName"
        android:text="Visitor Desc goes here here here here"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/progressTicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visitorPicture"
        android:layout_alignLeft="@id/visitorPicture"
        android:textSize="22sp"
        android:text="Loading progress..."
        android:textColor="#000000"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemsScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressTicker">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TableLayout
                android:id="@+id/itemsTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>